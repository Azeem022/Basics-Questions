public class CountDigits {
    public static void main(String[] args) {

        int num = 12345;
        int count = 0;

        num = Math.abs(num); // handle negative numbers

        if (num == 0) {
            count = 1;
        } else {
            while (num != 0) {
                num = num / 10;  // remove last digit
                count++;
            }
        }

        System.out.println("Total digits: " + count);
    }
}
